<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:orientation="vertical"

    tools:context=".Welness">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg1"
        android:text="@string/tcs_wellness"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints"
    />
    <ScrollView android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="584dp"
        android:layout_gravity="top"
        android:paddingBottom="20dp"

        android:background="@drawable/bg1"
        android:orientation="vertical"
        android:paddingTop="-5dp">


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp"

            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/bp" />

            <TextView
                android:gravity="center"
                android:id="@+id/bloodpresdurevalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="@string/_0"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:paddingBottom="20dp"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/bt" />



            <TextView
                android:gravity="center"
                android:id="@+id/bodyteparetureValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="@string/_0"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/glocose" />

            <TextView
                android:gravity="center"
                android:id="@+id/glucosevalue"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ems="10"
                android:text="@string/_0"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/respiration" />

            <TextView
                android:gravity="center"
                android:id="@+id/respirationvalue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:text="@string/_0"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"

            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/heartrate" />

            <TextView
                android:gravity="center"
                android:id="@+id/heartratevalue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:text="@string/_0"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:paddingBottom="20dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView

            android:id="@+id/imageView9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/o2" />

            <TextView
                android:gravity="center"
                android:id="@+id/oxygensaturationvalue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:text="@string/_0"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:paddingBottom="20dp"

            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/electrocardio" />

            <TextView
                android:gravity="center"
                android:id="@+id/elecrocardiogramvalue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:ems="10"
                android:text="@string/_0"
                android:textColor="@color/white" />
        </LinearLayout>



    </LinearLayout>
    </ScrollView>
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:orientation="horizontal">
    <Space
        android:layout_width="20dp"
        android:layout_height="10dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/refresh"

        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/refresh"

        android:foregroundGravity="center"
        android:foregroundTint="#000000" />

    <Space
        android:gravity="bottom"
        android:layout_width="250dp"
        android:layout_height="10dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/flotBtn"
        android:layout_marginRight="30dp"

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:foreground="@drawable/ic_baseline_add_circle_24"

        android:foregroundTint="#000000"
        />
    <Space
        android:layout_width="30dp"
        android:layout_height="10dp"/>
</LinearLayout>



</LinearLayout>


